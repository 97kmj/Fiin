<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mabatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="campaign.board">
	<select id="selectCampaign" parameterType="integer" resultType="Campaign">
														<!-- resultType=? -->
		<![CDATA[
		 	select * from campaign where campaign_num = ?
		]]>
	</select>
	<select id="selectAllCampaign" parameterType="integer" resultType="Campaign">
		<![CDATA[	
		select * from campaign order by update_start_date desc LIMIT limit #{row}, 8
			]]>
	</select>
	<select id="selectCampaign" resultType="integer">
		<![CDATA[
			select Count(*) from Campaign
		]]>
	</select>

</mapper>	
	