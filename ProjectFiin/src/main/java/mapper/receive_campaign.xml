<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mapper.receiveCampaign">
	<resultMap type="influencer" id="Influencer">
    	<result column="profile_image" property="profileImage"/>
    	<result column="nickname" property="nickname"/>
    	<result column="youtube_name" property="youtubeName"/>
    	<result column="instagram_name" property="instagramName"/>
    	<result column="blog_name" property="blogName"/>
    	<result column="category" property="category"/>
 	</resultMap>
 
<resultMap type="receiveCampaign" id="receiveCampaign">
    <result column="apply_num" property="applyNum"/>
    <collection property="influencer" resultMap="Influencer"/>
</resultMap>
	<select id="selectApplyListByCamapignNum" parameterType="Integer" resultMap="receiveCampaign">
		select r. apply_num , i.profile_image , i.nickname, i.youtube_name,i.instagram_name,i.blog_name, i.category
		from receive_campaign r join influencer i 
		using (influencer_num)
		where r.campaign_num = #{campaign_num}
	</select>


	
</mapper>